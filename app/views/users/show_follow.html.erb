<% provide(:title, @title) %>
<div class="row">
  <aside class="col-md-4">
    <section class="user_info">
      <%#= gravatar_for @user %>
      <h1><%= @user.name %></h1>
      <span><%= link_to "view my profile", @user %></span>
    </section>
    <section class="stats">
      <%= render 'partials/stats' %>
      <% if @users.try(:any?) %>
        <div class="user_avatars">
          <% @users.each do |user| %>
            <%= link_to user.username, user %>
          <% end %>
        </div>
      <% end %>
    </section>
  </aside>
  <div class="col-md-8">
    <h3><%= @title %></h3>
    <% if @users.try(:any?) %>
      <ul class="users follow">
        <%= render @users %>
      </ul>
      <%#= will_paginate %>
    <% end %>
  </div>
</div>